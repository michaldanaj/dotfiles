# wypisuje listę zainstalowanych pakietów
conda list

# installs specific major version of a package
conda install foo=13

# installs specific exact version of a package
conda install foo=13.3.2

# installs package verion in range
conda install 'foo>1.3,<1.2'

# updates packages to the latest compatible version with other installed
# (after dependency resolution and possibly updates)
conda update foo bar blob

# removes package
conda remove foo

# lists available package versions
conda search foo

# detailed information about specific packages
conda search 'foo=1.2.3=py36*' --info

# pdf cheatsheet
foxitreader ~/.config/cheat/cheatsheets/personal/conda-cheatsheet.pdf 

# show configuration
conda config --show

# show channels set
conda config --show channels

# add channel permanent to config
conda config --add channels foo_channel

# show channels priority
conda config --get channels


